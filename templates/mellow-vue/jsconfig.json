{
  "include": ["api/**/*", "assets/js/**/*", "types/index.d.ts"],

  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["es2016"],
    // silences wrong TS error, we don't compile, we only typecheck
    "outDir": "./irrelevant/unused",
    "allowJs": true,
    "checkJs": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noErrorTruncation": true
  }
}
